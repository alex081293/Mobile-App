<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <EditText
        android1:id="@+id/messageContent"
        android1:layout_width="306dp"
        android1:layout_height="106dp"
        android1:layout_x="8dp"
        android1:layout_y="16dp"
        android1:ems="10"
        android1:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android1:id="@+id/sendMessageBtn"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_x="110dp"
        android1:layout_y="217dp"
        android1:focusableInTouchMode="false"
        android1:onClick="submitButtonClick"
        android1:text="Submit" />

</AbsoluteLayout>
